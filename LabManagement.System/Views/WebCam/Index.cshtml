@{
    ViewBag.Title = "View Cam";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<script type="text/javascript">
    function UploadPic() {
        $.ajax({
            type: 'POST',
            url: ("@Url.Content("~/WebCam/Rebind")/"),
            dataType: 'json',
            success: function (data) {
                $("#show").attr("src", data);
                document.getElementById('Submit1').disabled = false;
                alert("Photo Capture successfully!");
            }
        });
    }

    function Uploadsubmit() {
        var src = $('img').attr('src');
        src_array = src.split('/');
        src = src_array[4];
        if (src != "") {
            $.ajax({
                type: 'POST',
                url: ("@Url.Content("~/WebCam/Index")/"),
               dataType: 'json',
               data: { Imagename: src },
               success: function () { }
           });
            window.opener.location.href ="@Url.Content("~/WebCam/Changephoto")/" ;
            self.close();}}
</script>
@using (Html.BeginForm())
{
    @section scripts
{
        <script type="text/javascript">
            $("#Camera").webcam({
                width: 320,
                height: 240,
                mode: "save",
                swffile: "@Url.Content("~/Content/js/jscam.swf")",
                onTick: function () { },
                onSave: function () {
                    UploadPic();
                },
                onCapture: function () {
                    webcam.save("@Url.Content("~/WebCam/Capture")/");
             },
                debug: function () { },
                onLoad: function () { }

            });
        </script>
    }
    <div style="margin: 0 auto; width: 980px; text-align: center">
        <div style="float: left; border: 4px solid #ccc; padding: 5px">
            <div id="Camera">
            </div>
            <br>
            <input type="button" value="Scan QR" onclick="webcam.capture();" id="scanQr"/>
        </div>
    </div>

}
<script type="text/javascript">
    document.getElementById('scanQr').click();
</script>
