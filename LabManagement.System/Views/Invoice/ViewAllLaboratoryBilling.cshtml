@using Lab.Management.Entities;
@using LabManagement.System.Common;
@using Lab.Management.Common;
@model IList<lmsLaboratoryBilling>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;
    var GrandTotal = Convert.ToString(ViewBag.GrandTotal);
    var userInfo = Session["UserInfo"] as usp_ValidateUser_Result;
    var hiddenClass = userInfo.GetDisplayCssByRole();
}
<div class="roundCornerDiv">
    @if (!string.IsNullOrEmpty(message))
    {
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="alert alert-info">
                    @message
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
            <a href="@Url.Action("ViewLaboratoryBilling", new { LaboratoryBillingId = 0 })" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>New
            </a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1">
            Date:
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <input type="text" id="DDATE" style="width:70%" />
            <button type="button" id="filterDate" class="btn btn-success">
                <i class="glyphicon glyphicon-filter"></i>
            </button>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col-sm-4 col-md-4 col-lg-4">
                Grand Total :<strong>@GrandTotal</strong>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-8 col-lg-8 col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="glyphicon glyphicon-th-large"></i>  All Bills
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            @{
                                <table id="allDetails" class=" table table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <td>Name</td>
                                            <td>Date</td>
                                            <td>Bill amount</td>
                                            <td>View Bill</td>
                                            <td>View Report</td>
                                            <td class="@hiddenClass">Delete</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var obj in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="@Url.Action("GenerateLaboratoryBill", new { LaboratoryBillingId = @obj.BILLID })">
                                                        @obj.BILLNAME
                                                    </a>
                                                </td>
                                                <td>@obj.BILLDATE.ParseIstDate()</td>
                                                <td>@obj.BILLAMOUNT</td>
                                                <td>
                                                    <button type="button" class="btn btn-primary" id="btnDownload" onclick="downloadBill('@obj.BILLNAME','@obj.BILLID','@obj.CONTACT','@obj.BILLDATE.ParseIstDate()','@obj.BILLAMOUNT')">
                                                        <i class="glyphicon glyphicon-download"></i>
                                                        View/Download and Share

                                                    </button>

                                                </td>
                                                <td>
                                                    <a href="@Url.Action("GenerateLaboratoryReport", new { LaboratoryBillingId = @obj.BILLID })" class="btn btn-info">
                                                        <i class="glyphicon glyphicon-record"></i>
                                                    </a>
                                                </td>

                                                <td class="@hiddenClass">
                                                    <a href="@Url.Action("DeleteLaboratoryBilling", new { LaboratoryBillingId = @obj.BILLID })" class="btn btn-danger">
                                                        <i class="glyphicon glyphicon-trash"></i>
                                                        Delete Bill
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
    @if (Model.Count() <= 0)
    {
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="alert alert-danger">
                    No Data Found
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            $('#allDetails').DataTable();
            $('#DDATE').datepicker({ format: 'dd-mm-yyyy' });
            $('#filterDate').on('click', function () {
                var dateValue = $('#DDATE').val();
                if (dateValue !== '') {
                    window.location.href = "ViewAllLaboratoryBilling?filterDate=" + dateValue;
                    return;
                }
                alert("Please choose date filter");
            });
        });
         function downloadBill(name, billNo, contact, billDate, billTotal) {
                 var headerSection = {
                    name: '@ConfigurationWrapper.StringSettings(ConfigKey.HospitalName)',
                    address: '@ConfigurationWrapper.StringSettings(ConfigKey.HospitalAddress)',
                    contact: '@ConfigurationWrapper.StringSettings(ConfigKey.HospitalContact)',
                     email: '@ConfigurationWrapper.StringSettings(ConfigKey.HospitalEmail)',
                    gst:'@ConfigurationWrapper.StringSettings(ConfigKey.HospitalGST)',
                };
                var patientDetails = {
                    name: name,
                    billNo: 'LB' + billNo,
                    contact: contact,
                    billDate:billDate, billTotal:billTotal
                };
                var medicalBillColumns = [
                    { title: "Particulars", dataKey: "ItemName" },
                    { title: "Unit Price", dataKey: "UnitPrice" }
                ];
             var detailUrl = "@Url.Action("GetLaboratoryDetailListByBillId", "Invoice")" + '?labBillId=' +billNo ;
                     $.ajax({
                    url: detailUrl,
                    type: "GET",
                         success: function (result) {
                       var printJson = result;
                       var fileNameWithoutExtension = name + '_' + billDate;
                       generatePDF(headerSection, patientDetails, medicalBillColumns, printJson, fileNameWithoutExtension);
                    },
                    error: function (result) {
                        alert("Failed");
                    }
                });
            }
    </script>
}
