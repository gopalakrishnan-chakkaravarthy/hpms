            <div class="col-sm-10 col-md-10 col-lg-10">
                <a href="@Url.Action("ViewAllUltraSonagramReportTwo", "Invoice")" class="btn btn-warning">
                    <i class="glyphicon glyphicon-arrow-left">
                        Back
                    </i>
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-pencil">
                        Save
                    </i>
                </button>
                @if (Model.REPORTID > 0)
                {
                    <a href="@Url.Action("DeleteUltraSonagramReportTwo", "Invoice", new { ReportId = Model.REPORTID })" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                        Delete
                    </a>
                    <a href="@Url.Action("GenerateUltraSonagramReportTwo", "Invoice", new { ReportId = Model.REPORTID })" class="btn btn-info">
                        <i class="glyphicon glyphicon-th-large"></i>
                        Generate Sonogram
                    </a>
                }
