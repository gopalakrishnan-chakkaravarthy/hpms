@using Lab.Management.Entities;
@model lmsGeneralDischargeSummary
@{
    ViewBag.Title = "View General Discharge Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;


}


@if (!string.IsNullOrEmpty(message))
{
    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
            <div class="alert alert-info">
                @message
            </div>
        </div>
    </div>
}


<div class="col-sm-10 col-md-10 col-lg-10 roundCornerDiv">

    @using (Html.BeginForm("EditGenDischargeSummary", "Invoice", new { @id = "IdEdit", @name = "EditForm" }))
    {
        <div class="row">
            <hr />
        </div>
        <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10 text-center">
                <div class="col-sm-10 col-md-10 col-lg-10 text-center">
                    @Html.Partial("_HospitalDetail")
                    <p><h4 class="text-success"><i class="glyphicon glyphicon-hand-right"> </i> Discharge Summary</h4></p>
                </div>
            </div>
        </div>
        <div class="row">
            <hr />
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Name
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3">

                @Html.DropDownListFor(x => x.SelectedPatient, Model.PatientDdl, new { @class = "form-control selectpicker", required = "required" })

                @Html.HiddenFor(x => x.SUMMARYID)
            </div>
            <div class="col-sm-1 col-md-1 col-lg-1">
                @*Age*@
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2">
                @*@Html.LabelFor(m => m.lmsPatientRegistration.AGE, new { @class = "form-control" })*@
            </div>
            <div class="col-sm-1 col-md-1 col-lg-1">
                DOD
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2">
                @Html.TextBoxFor(m => m.DOD, new { @Id = "DOD", @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="row">
            <hr />
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Diagnosis
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.DIAGNOSIS, new { @class = "form-control" })
            </div>

        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Investigation
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.INVESTIGATION, new { @class = "form-control investigationArea", @style = "height:200px;" })
            </div>




        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Patient is Admitted with c/o
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.PATIENTADMITTEDWITH, new { @class = "form-control" })
            </div>




        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Past History
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.PASTHISTORY, new { @class = "form-control" })
            </div>




        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Family History
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.FAMILYHISTORY, new { @class = "form-control" })
            </div>




        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Treatment
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.TREATMENT, new { @class = "form-control" })
            </div>




        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Patient Discharged on
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3">
                @Html.TextBoxFor(m => m.PATIENTDISCHARGEDON, new { @Id = "PATIENTDISCHARGEDON", @class = "form-control" })
            </div>




        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Condition on Discharge
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.CONDITIONONDISCHARGE, new { @Id = "CONDITIONONDISCHARGE", @class = "form-control" })
            </div>




        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Advise
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.ADVISE, new { @Id = "ADVISE", @class = "form-control" })
            </div>




        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Consulting Doctor
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.CONSULTINGDOCTOR, new { @Id = "CONSULTINGDOCTOR", @class = "form-control" })
            </div>




        </div>


        <hr />
        <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10">
                <a href="@Url.Action("ViewAllGenDischargeSummary", "Invoice")" class="btn btn-warning">
                    <i class="glyphicon glyphicon-arrow-left">
                        Back
                    </i>
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-pencil">
                        Save
                    </i>
                </button>
                @if (Model.SUMMARYID > 0)
                {
                    <a href="@Url.Action("DeleteGenDischargeSummary", "Invoice", new { ReportId = Model.SUMMARYID})" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                        Delete
                    </a>
                    <a href="@Url.Action("GenerateGenDischargeSummary", "Invoice", new { ReportId = Model.SUMMARYID})" class="btn btn-info">
                        <i class="glyphicon glyphicon-th-large"></i>
                        Generate Summary
                    </a>
                }
            </div>
        </div>
        <div class="row">

            <hr />
        </div>
    }
</div>
@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {

            $('#DOD').datepicker({ format: 'dd/mm/yyyy'  });
            $('#PATIENTDISCHARGEDON').datepicker({ format: 'dd/mm/yyyy'  });


        });

    </script>
}

<style type="text/css">
    .investigationArea {
        height: 500px;
        overflow-y: auto;
    }
</style>