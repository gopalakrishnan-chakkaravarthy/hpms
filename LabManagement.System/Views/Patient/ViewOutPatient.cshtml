@using Lab.Management.Entities;
@model lmsOutPatientMaster
@{
    ViewBag.Title = "View Out Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;

}


@if (!string.IsNullOrEmpty(message))
{
    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
            <div class="alert alert-info">
                @message
            </div>
        </div>
    </div>
}

<div class="col-sm-8 col-md-8 col-lg-8 roundCornerDiv">
    @using (Html.BeginForm("EditOutPatient", "Patient", new { @id = "IdEdit", @name = "EditForm" }))
    {
        <div class="row">

            <h4 class="text-success"><i class="glyphicon glyphicon-hand-right">  Out Patient </i></h4>
            <hr />
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Name
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.PATIENTNAME, new { @class = "form-control", required = "required" })
                @Html.HiddenFor(x => x.OPMASTERID)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Gender
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                <div class="form-group">
                    <div class="radio">
                        <label>@Html.RadioButtonFor(x => x.Sex, 1, new { required = "required" })Male</label>
                    </div>
                    <div class="radio">
                        <label>@Html.RadioButtonFor(x => x.Sex, 2, new { required = "required" })FeMale</label>
                    </div>

                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Date of Birth
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.DOB, new { @Id = "DOB", @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Age
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.AGE, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Weight
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.WIEGHT, new { @class = "form-control", required = "required" })
            </div>
        </div>


        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Height
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.HEIGHT, new { @class = "form-control"})
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Diagnosis Summary
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.DIAGNOSISFOR, new { @class = "form-control" })
            </div>
        </div>
    
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Disease
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.DropDownListFor(x => x.SelectedDisease, Model.DiseaseDdl, new { @class = "form-control selectpicker", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Consulting Doctor
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(x => x.CONSULTINGDOCTOR, new { @Id = "CONSULTINGDOCTOR", @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Consulting Fee
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(x => x.CONSULTINFEE, new { @Id = "CONSULTINFEE", @class = "form-control", required = "required" })
            </div>
        </div>
        <hr />
        <div class="row">

            <div class="col-sm-8 col-md-8 col-lg-8">
                <a href="@Url.Action("ViewAllOutPatient", "Patient")" class="btn btn-warning">
                    <i class="glyphicon glyphicon-arrow-left">
                        Back
                    </i>
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-floppy-disk"></i>
                    Save
                </button>
                @if (Model.OPMASTERID > 0)
                {
                    <a href="@Url.Action("DeleteOutPatient", "Patient", new { PatientId = @Model.OPMASTERID })" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash">
                            Delete
                        </i>
                    </a>

                }
            </div>
        </div>
        <div class="row">

            <hr />
        </div>
    }
</div>
@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $('#DOB').datepicker({ format: 'dd/mm/yyyy'  });
        });

    </script>
}
