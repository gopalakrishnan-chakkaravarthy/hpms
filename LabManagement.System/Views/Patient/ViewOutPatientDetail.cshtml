@using Lab.Management.Entities;
@model lmsOutPatientDetail
@{
    ViewBag.Title = "View Out Patient History";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;
    var OpMasterId = Convert.ToInt32(ViewBag.OpMasterId as string);
    var diseaseddl = ViewBag.DiseaseList as IEnumerable<SelectListItem>;
}


@if (!string.IsNullOrEmpty(message))
{
    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
            <div class="alert alert-info">
                @message
            </div>
        </div>
    </div>
}

<div class="col-sm-8 col-md-8 col-lg-8 roundCornerDiv">
    @using (Html.BeginForm("EditOutPatientDetail", "Patient", new { @id = "IdEdit", @name = "EditForm" }))
    {
        <div class="row">
            <h4 class="text-success"><i class="glyphicon glyphicon-hand-right">  View Out Patient History</i></h4>
            <hr />
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Findings
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.HiddenFor(x => x.OPDID)
                @Html.TextAreaFor(m => m.FINDINGS, new { @class = "form-control", required = "required" })

            </div>
        </div>

        <input type="hidden" value="@OpMasterId" name="OPMASTERID" id="OPMASTERID" />
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Compliant
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.PATIENTDESCRIPTION, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Additional Comments
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.ADDITIONALCOMMENTS, new { @class = "form-control" })
            </div>
        </div>
             <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Patient Prescription
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.PRESCRIOPTION, new { @class = "form-control" ,@Style="height:300px"})
            </div>
        </div>
        <hr />
        <div class="row">

            <div class="col-sm-8 col-md-8 col-lg-8">
                <a href="@Url.Action("ViewAllOutPatientDetail", "Patient", new { outPatientId = @OpMasterId })" class="btn btn-warning">
                    <i class="glyphicon glyphicon-arrow-left">
                        Back
                    </i>
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-floppy-disk"></i>
                    Save
                </button>
                @if (Model.OPDID > 0)
                {
                    <a href="@Url.Action("DeleteOutPatient", "Patient", new { PatientId = @Model.OPDID })" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash">
                            Delete
                        </i>
                    </a>

                }
            </div>
        </div>
        <div class="row">

            <hr />
        </div>
    }
</div>
