@using Lab.Management.Entities;
@using LabManagement.System.Common;
@model IList<lmsOutPatientDetail>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;
    var OutPatientId = ViewBag.OutPatientId as string;
}
<div class="roundCornerDiv">
    <div class="row">
        @if (Model.Count() > 0)
        {
            <h4>@string.Format("Patient History of {0}", @Model.FirstOrDefault().lmsOutPatientMaster.PATIENTNAME)</h4>
        }

    </div>
    @if (!string.IsNullOrEmpty(message))
    {
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="alert alert-info">
                    @message
                </div>
            </div>
        </div>
    }
    @if (Model.Count() <= 0)
    {
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="alert alert-danger">
                    No Data Found
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">

            <a href="@Url.Action("ViewAllOutPatient", "Patient")" class="btn btn-warning">
                <i class="glyphicon glyphicon-arrow-left">
                    Back
                </i>
            </a>
            <a href="@Url.Action("ViewOutPatientDetail", new { PatientId = 0, opMasterId = @OutPatientId })" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>Add New Report ...
            </a>
        </div>
    </div>
    <hr />
    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col-sm-10 col-lg-10 col-md-10">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="glyphicon glyphicon-th-large"></i>  Patient History
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            @{
                                <table id="allDetails" class=" dataTable table table-striped table-bordered dataTable no-footer">
                                    <thead>
                                        <tr>
                                            <td>OP Date</td>
                                            <td>Diagonisis for</td>
                                            <td>Patient History Findings</td>
                                            <td>Patient Description</td>
                                            <td>Additional Comments</td>
                                            <td>Edit Patient History</td>
                                            <td>Delete</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var obj in Model)
                                        {
                                            <tr>
                                                <td>@obj.CREATEDDATE.IstDateConversion()</td>
                                                <td>@obj.lmsOutPatientMaster.lmsDiseaseMaster.DISEASENAME</td>
                                                <td>
                                                    @obj.FINDINGS
                                                </td>
                                                <td>@obj.PATIENTDESCRIPTION</td>
                                                <td>@obj.ADDITIONALCOMMENTS</td>
                                                <td>
                                                    <a href="@Url.Action("ViewOutPatientDetail", new { PatientId = @obj.OPDID, opMasterId = @obj.OPMASTERID })" class="btn btn-success">
                                                        <i class="glyphicon glyphicon-pencil"></i>
                                                    </a>
                                                </td>

                                                <td>
                                                    <a href="@Url.Action("DeleteOutPatientDetail", new { PatientId = @obj.OPDID })" class="btn btn-danger">
                                                        <i class="glyphicon glyphicon-trash"></i>
                                                    </a>

                                                </td>


                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }

                        </div>
                    </div>
                </div>

            </div>
        </div>

    }
</div>
@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $('#allDetails').DataTable();
        });

    </script>
}


