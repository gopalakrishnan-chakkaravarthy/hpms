@using Lab.Management.Entities;
@using LabManagement.System.Common;
@model IList<lmsOutPatientMaster>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;
}
<div class="roundCornerDiv">

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="alert alert-info">
                    @message
                </div>
            </div>
        </div>
    }
    @if (Model.Count() <= 0)
    {
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="alert alert-danger">
                    No Data Found
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
            <a href="@Url.Action("ViewOutPatient", new { PatientId = 0 })" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>New
            </a>
        </div>
    </div>
    <hr />
    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col-sm-1 col-md-1 col-lg-1">
                Date:
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3">
                <input type="text" id="DDATE" style="width:70%" />
                <button type="button" id="filterDate" class="btn btn-success">
                    <i class="glyphicon glyphicon-filter"></i>
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 col-lg-10 col-md-10">
                <div class="panel panel-default">
                    <div class="panel-heading">
                      <i class="glyphicon glyphicon-th-large"></i>  Out Patient List
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">

                            @{
                                <table id="allDetails" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <td>Patient Id</td>
                                            <td>Patient Name</td>
                                            <td>DOB</td>
                                            <td>Geneder</td>
                                            <td>Disease</td>
                                            <td>Case History Overview</td>
                                            <td>OP Date</td>
                                            <td>Edit Basic Info</td>
                                            <td>Edit Patient History</td>
                                            <td>Delete</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var obj in Model)
                                        {
                                            <tr>
                                                <td>@obj.OPMASTERID</td>
                                                <td>
                                                    @obj.PATIENTNAME
                                                </td>
                                                <td>
                                                    @if (obj.DOB != null)
                                                    {
                                                        obj.DOB.ParseIstDate();
                                                    }

                                                </td>
                                                <td>@obj.GENDER.ParseGender()</td>
                                                <td>@obj.lmsDiseaseMaster.DISEASENAME</td>
                                                <td>@obj.DIAGNOSISFOR</td>
                                                <td>@obj.CREATEDATE.ParseIstDate()</td>
                                                <td>
                                                    <a href="@Url.Action("ViewOutPatient", new { PatientId = @obj.OPMASTERID })" class="btn btn-success">
                                                        <i class="glyphicon glyphicon-pencil"></i>
                                                    </a>

                                                </td>

                                                <td>
                                                    <a href="@Url.Action("ViewAllOutPatientDetail", new { outPatientId = @obj.OPMASTERID })" class="btn btn-info">
                                                        <i class="glyphicon glyphicon-dashboard"></i>
                                                    </a>

                                                </td>
                                                <td>
                                                    <a href="@Url.Action("DeleteOutPatient", new { PatientId = @obj.OPMASTERID })" class="btn btn-danger">
                                                        <i class="glyphicon glyphicon-trash"></i>
                                                    </a>

                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>

    }
</div>
@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $('#allDetails').DataTable();
            $('#DDATE').datepicker({ format: 'dd-mm-yyyy' });
            $('#filterDate').on('click', function () {
                var dateValue = $('#DDATE').val();
                if (dateValue !== '') {
                    window.location.href = "ViewAllOutPatient?filterDate=" + dateValue;
                    return;
                }
                alert("Please choose date filter");
            });
        });

    </script>
}


