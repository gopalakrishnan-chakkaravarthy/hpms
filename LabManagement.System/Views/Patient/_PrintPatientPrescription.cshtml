@using Lab.Management.Entities;
@model List<lmsPatientPrescription>
@{
    var message = ViewBag.Message as string;
    var name = ViewBag.Name as string;
    var contact = ViewBag.Contact as string;
}
@if (!string.IsNullOrEmpty(message))
{
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="alert alert-info">
                @message
            </div>
        </div>
    </div>
}
@if (Model != null && Model.Count() <= 0)
{
    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
            <div class="alert alert-danger">
                No Data Found
            </div>
        </div>
    </div>
}
@if (Model.Count() > 0)
{
    <div class="col-sm-12 col-md-12 col-lg-12 roundCornerDiv">
        <div id="canvasElement">
            <div class="row">
                <div class="col-sm-10 col-md-10 col-lg-10 text-center">
                    @Html.Partial("_HospitalDetail")
                    <p><h4 class="text-info">Prescription Letter</h4></p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <table class="table no-footer">
                        <tbody>
                            <tr>
                                <td class="text-strong">Name :</td>
                                <td><span style="font-weight:normal">@name</span></td>
                                <td class="text-strong">Contact :</td>
                                <td>@contact</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">

                    <table class="table table-striped dataTable no-footer">
                        <thead>
                            <tr>
                                <th>
                                    Drug Name
                                </th>
                                <th>
                                    Medicine Count
                                </th>
                                <th>
                                    Strength
                                </th>
                                <th>
                                    Dosage Power
                                </th>
                                <th>
                                    Frequency
                                </th>
                                <th>
                                    Instructions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td>
                                        @obj.lmsDrug.DRUGNAME
                                    </td>
                                    <td>
                                        @obj.MEDICINECOUNT
                                    </td>
                                    <td>
                                        @obj.STRENGTH
                                    </td>
                                    <td>
                                        @obj.lmsDrugDosage.DOSAGEPOWER
                                    </td>
                                    <td>
                                        @obj.lmsDrugFrequency.FREQUENCY
                                    </td>
                                    <td>
                                        @obj.INSTRUCTIONS
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 text-center" id="appendElements">

                    <button type="button" class="btn btn-primary " id="btnPrint">
                        <i class="glyphicon glyphicon-print"></i>
                        Print
                    </button>
                </div>
            </div>
        </div>
    </div>
}
