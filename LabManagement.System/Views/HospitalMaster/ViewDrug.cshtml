@using Lab.Management.Entities;
@model lmsDrug
@{
    ViewBag.Title = "View Drug";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;
}

@if (!string.IsNullOrEmpty(message))
{
    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
            <div class="alert alert-info">
                @message
            </div>
        </div>
    </div>
}

<div class="col-sm-8 col-md-8 col-lg-8 roundCornerDiv">
    @using (Html.BeginForm("EditDrug", "HospitalMaster", new { @id = "IdEdit", @name = "EditForm" }))
    {
        <div class="row">
            <h4 class="text-success"><i class="glyphicon glyphicon-hand-right"> </i> Drug Details</h4>
            <hr/>
        </div>
        if (!string.IsNullOrEmpty(Model.QrCodeBase64))
        {
            <div class="row">
                <div class="col-sm-8 col-md-8 col-lg-8 pull-right">
                    <img alt="qrCode" id="imgQrCode" src="@Model.QrCodeBase64"/>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Item Name
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.DRUGNAME, new { @class = "form-control", required = "required" })
                @Html.HiddenFor(x => x.DRUGID)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Rack Number
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.RackNumber, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Drug Buying Price
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.BUYINGPRICE, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Drug Selling Price
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.SELLINGPRICE, new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Total Order Quantity
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.ORDERCOUNT, new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Drug Manufacture Date
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.MANUFACTUREDATE, new { @id = "MANUFACTUREDATE", @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Drug Expiry Date
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.EXPIRYDATE, new { @id = "EXPIRYDATE", @class = "form-control", required = "required" })
            </div>
        </div>
        @*<div class="row">
                <div class="col-sm-3 col-md-3 col-lg-3">
                    Qr Code Text
                </div>
                <div class="col-sm-5 col-md-5 col-lg-5">
                    @Html.TextBoxFor(m => m.QrCodeContent, new { @Id = "QrCodeContent", @class = "form-control", @required = "required" })
                </div>
            </div>*@

        <hr/>
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <a href="@Url.Action("ViewAllDrug", "HospitalMaster")" class="btn btn-warning">
                    <i class="glyphicon glyphicon-arrow-left">
                        Back
                    </i>
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-pencil">
                        Save
                    </i>
                </button>
                @if (Model.DRUGID > 0)
                {
                    <a href="@Url.Action("DeleteDrug", "HospitalMaster", new { DrugId=Model.DRUGID})" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                        Delete
                    </a>
                }
            </div>
        </div>
        <div class="row">
            <hr/>
        </div>
    }
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            $('#MANUFACTUREDATE').datepicker({ format: 'dd/mm/yyyy' });
            $('#EXPIRYDATE').datepicker({ format: 'dd/mm/yyyy' });
        });
    </script>
}
