@{
    ViewBag.Title = "File Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.message as string;
}


@if (!string.IsNullOrEmpty(message))
{
    <div class="rwo">
        <div class="col-md-8">
            <div class="alert alert-info">

                File @message Successfully
            </div>
        </div>
    </div>
}
<div class="col-sm-8 col-md-8 col-lg-8 roundCornerDiv">

    @using (Html.BeginForm("Upload", "HospitalMaster", FormMethod.Post, new { @id = "IdEdit", @name = "EditForm", enctype = "multipart/form-data" }))
    {
        <div class="row">
            <h4 class="text-success"><i class="glyphicon glyphicon-hand-right"> </i> File Upload</h4>
            <hr />
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                File Name
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                <span class="btn btn-file btn-info">
                    
                    
                    <input type="file" name="myFileUpload" id="myFileUpload" />
                </span>
                
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Upload For
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                <div class="form-group">
                    <div class="radio">
                        @Html.RadioButton("uploadfor", "TEMPLATE", new { required = "required" }) Template
                    </div>
                    <div class="radio">
                        @Html.RadioButton("uploadfor", "Patient", new { required = "required" })  Patient Report
                    </div>
                </div>
                
                

            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">

                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-upload">
                        Upload File
                    </i>
                </button>

            </div>
        </div>
        <div class="row">

            <hr />
        </div>
    }
</div>
