@{
       var filterList = ViewBag.FilterList as IEnumerable<SelectListItem>;
}
<div class="row">
    <div class="col-sm-2 col-md-2 col-lg-2">
        Filter By:
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3">
        <select class="selectpicker " data-live-search="true" id="filterDdl" style="display:block !important;">
            @foreach (var dropdown in filterList)
            {
                <option data-tokens="@dropdown.Text" value="@dropdown.Value">@dropdown.Text</option>
            }
        </select>
    </div>
    <div class="col-sm-5 col-md-5 col-lg-5">
        <input type="text" id="filterByText" style="width:75%" />
        <button type="button" id="filterByBtn" class="btn btn-success">
            <i class="glyphicon glyphicon-filter"></i>
        </button>
    </div>
</div>