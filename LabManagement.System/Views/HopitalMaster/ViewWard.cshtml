@using Lab.Management.Entities;

@model lmsWard
@{
    ViewBag.Title = "View Ward";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;

}


@if (!string.IsNullOrEmpty(message))
{
    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
            <div class="alert alert-info">
                @message
            </div>
        </div>
    </div>
}


<div class="col-sm-8 col-md-8 col-lg-8 roundCornerDiv">

    @using (Html.BeginForm("EditWard", "HopitalMaster", new { @id = "IdEdit", @name = "EditForm" }))
    {
        <div class="row">
            <h4 class="text-success"><i class="glyphicon glyphicon-hand-right"> </i> View Ward Details</h4>
            <hr />
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Ward Name
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.WARDNAME, new { @class = "form-control", required = "required" })
                @Html.HiddenFor(x => x.WARDID)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Bed
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.DropDownListFor(x => x.SelectedBed, Model.BedDdl, new { @class = "form-control", required = "required" })

            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <a href="@Url.Action("ViewAllWard", "HopitalMaster")" class="btn btn-warning">
                    <i class="glyphicon glyphicon-arrow-left">
                        Back
                    </i>
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-pencil">
                        Save
                    </i>
                </button>
                @if (Model.WARDID > 0)
                {
                    <a href="@Url.Action("DeleteWard", "HopitalMaster", new { WardId=Model.WARDID})" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                        Delete
                    </a>
                }
            </div>
        </div>
        <div class="row">

            <hr />
        </div>
    }
</div>
