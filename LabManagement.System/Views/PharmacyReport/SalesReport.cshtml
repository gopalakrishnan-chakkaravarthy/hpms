@using LabManagement.System.Common;
@using Lab.Management.Engine.Models;
@model IList<SalesReportResponse>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;
}

<div class="roundCornerDiv">

    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1">
            From Date:
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="text" placeholder="From Date" id="fromDate" style="width:70%" />

        </div>
        <div class="col-sm-1 col-md-1 col-lg-1">
            To Date:
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="text" placeholder="To Date" id="toDate" style="width:70%" />

        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <button type="button" id="filterDate" class="btn btn-success">
                <i class="glyphicon glyphicon-filter"></i> View Sales Report
            </button>

        </div>
        @if (Model != null && Model.Count() > 0)
        {
            <div class="col-sm-3 col-md-3 col-lg-3">
                <button type="button" class="btn btn-primary" id="btnDownload">Download Sales Report</button>

            </div>
        }
    </div>
    @if (Model != null && Model.Count() > 0)
    {

        <div class="row">
            <div class="col-sm-12 col-lg-12 col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">

                            @{
                                <table id="allDetails" class=" table table-striped table-bordered nowrap">
                                    <tbody>
                                        <tr>

                                            <td colspan="9" style="text-align:center;font-weight:bold">
                                                @Html.Partial("_HospitalDetail")
                                            </td>

                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold">Bill No</td>
                                            <td style="font-weight:bold">Name</td>
                                            <td style="font-weight:bold">Sales Date</td>
                                            <td style="font-weight:bold">Mobile Number</td>
                                            <td style="font-weight:bold">Particulars</td>
                                            <td style="font-weight:bold">Quantity</td>
                                            <td style="font-weight:bold">Unit Price</td>
                                            <td style="font-weight:bold">Tax(%)</td>
                                            <td style="font-weight:bold">Total Amount</td>

                                        </tr>
                                        @foreach (var obj in Model)
                                        {
                                            <tr>
                                                <td> @string.Format("MB{0} ", obj.BILLID)</td>
                                                <td>
                                                    @obj.BILLNAME
                                                </td>
                                                <td>@obj.BILLDATE.ParseIstDate()</td>
                                                <td>@obj.CONTACT</td>
                                                <td>@obj.MedicineName</td>
                                                <td>@obj.QUANTITY</td>
                                                <td>@obj.ITEMCOST</td>
                                                <td>@string.Format("{0} ({1} )", obj.TAXAMOUNT, obj.GSTName)</td>
                                                <td>@obj.BILLAMOUNTWITHTAX.GetValueOrDefault()</td>

                                            </tr>
                                        }
                                        <tr>
                                            <td style="text-align:left;font-weight:bold"> Sub Total</td>
                                            <td colspan="8" style="text-align:right;font-weight:bold">
                                                @Math.Round(Model.Sum(x => x.ITEMCOST.GetValueOrDefault() + x.TAXAMOUNT.GetValueOrDefault()), 2)
                                            </td>

                                        </tr>
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>

    }
    @if (Model == null || Model.Count() <= 0)
    {
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="alert alert-danger">
                    No Data Found for selected date
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            // var allTblData=  $('#allDetails').DataTable();
            $('#fromDate').datepicker({ format: 'dd/mm/yyyy' });
            $('#toDate').datepicker({ format: 'dd/mm/yyyy' });
            $('#filterDate').on('click', function () {
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();
                if (fromDate !== '' && fromDate !== '') {
                    window.location.href = "SalesReport?filterFromDate=" + fromDate + "&filterToDate=" + toDate + "";
                    return;
                }
                alert("Please choose date filter");
            });
            $('#btnDownload').on('click', function () {
                $("#allDetails").table2excel({
                    exclude: ".noExl",
                    name: "Worksheet Name",

                    filename: "SalesReport.xls",
                });
            });

        });

    </script>
}

