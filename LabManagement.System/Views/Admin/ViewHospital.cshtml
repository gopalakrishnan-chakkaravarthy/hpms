@using Lab.Management.Entities;
@model lmsHospitalMaster
@{
    ViewBag.Title = "View Hospital";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;
    var cityddl = ViewBag.CityList as IEnumerable<SelectListItem>;
    var stateddl = ViewBag.StateList as IEnumerable<SelectListItem>;
}


@if (!string.IsNullOrEmpty(message))
{
    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
            <div class="alert alert-info">
                @message
            </div>
        </div>
    </div>
}

<div class="col-sm-8 col-md-8 col-lg-8 roundCornerDiv">
    @using (Html.BeginForm("EditHospital", "Admin", new { @id = "IdEdit", @name = "EditForm", @AllowHtmlAttribute = true }))
    {
        <div class="row">
            <h4 class="text-success"><i class="glyphicon glyphicon-hand-right"> </i> View Hospital Details</h4>
            <hr />
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Hospital Name
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                
                @Html.TextBoxFor(m => m.HOSPITALNAME, new { @class = "form-control", required = "required" })
                @Html.HiddenFor(x => x.HOSPITALID)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Managed By
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.MANAGEDBY, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                ISO Certified
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.CheckBoxFor(m => m.ISOCERTIFIED.Value, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Hospital Address
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextAreaFor(m => m.HOSPITALADDRESS, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                City
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.DropDownList("cityddl", cityddl, new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                State
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.DropDownList("Statedddl", stateddl, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Contact No
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.CONTACT, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Email
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.EMAILID, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Fax
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.FAX, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Quote 1
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.QUOTE1, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                Quote 2
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5">
                @Html.TextBoxFor(m => m.QUOTE2, new { @class = "form-control" })
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">

            </div>
            <div class="col-sm-8 col-md-8 col-lg-8">
                <a href="@Url.Action("ViewAllHospital", "Admin")" class="btn btn-warning">
                    <i class="glyphicon glyphicon-arrow-left">
                        Back
                    </i>
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-floppy-disk"></i>
                    Save
                </button>
                @if (Model.HOSPITALID > 0)
                {
                    <a href="@Url.Action("DeleteHospital", "Admin", new { HospitalId = @Model.HOSPITALID })" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash">
                            Delete
                        </i>
                    </a>
                }
            </div>
        </div>
        <div class="row">

            <hr />
        </div>
    }
</div>
