@using Lab.Management.Entities;
@using LabManagement.System.Common;
@model lmsOtherCaseSheet
@{
    ViewBag.Title = " Other Case Sheets";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;
}

<div class="col-sm-10 col-md-10 col-lg-10 roundCornerDiv">
    <div id="canvasElement">

        <div class="row">
            <hr/>
        </div>
        <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10 text-center">
                @Html.Partial("_HospitalDetail")
                <p><h4 class="text-success"><i class="glyphicon glyphicon-hand-right"> </i> Other Case Sheets</h4></p>
            </div>
        </div>
        <div class="row">
            <hr/>
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Name :
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2 lms-font-nomal">
                @if (Model.NAME.stringIsNotNull())
                {
                    <div>@Model.NAME</div>

                }
                else
                {
                    <div>--</div>
                }
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2">
                Age :
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2 lms-font-nomal">

                @if (Model.AGE != null)
                {
                    <div>@Model.AGE</div>

                }
                else
                {
                    <div>--</div>
                }
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2">
                I.P.NO :
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2 lms-font-nomal">

                @if (Model.ipno.stringIsNotNull())
                {
                    <div>@Model.ipno</div>

                }
                else
                {
                    <div>--</div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Address :
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 text-justify lms-font-nomal">

                @if (Model.ADDRESS.stringIsNotNull())
                {
                    <div>@Model.ADDRESS</div>

                }
                else
                {
                    <div>--</div>
                }
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2">
                DOA :
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 lms-font-nomal">

                @if (Model.DOA.dateTimeIsNotNull())
                {
                    <div>@Model.DOA.ParseIstDate()</div>

                }
                else
                {
                    <div>--</div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                DOD :
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 lms-font-nomal">
                @if (Model.DOD.dateTimeIsNotNull())
                {
                    <div>@Model.DOD.ParseIstDate()</div>

                }
                else
                {
                    <div>--</div>
                }
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2">
                Phone :
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 lms-font-nomal">

                @if (Model.PHNO.stringIsNotNull())
                {
                    <div>@Model.PHNO</div>

                }
                else
                {
                    <div>--</div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Complaints :
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 text-justify lms-font-nomal">

                @if (Model.COMPLAINTS != null)
                {
                    <p>@Html.Raw(Model.COMPLAINTS)</p>
                }
                else
                {
                    <div>--</div>
                }
                <br/>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Examination :
            </div>
            <div class="col-sm-8 col-md-8 col-lg-8 text-justify lms-font-nomal">

                @if (Model.EXAMINATION != null)
                {
                    <p>@Html.Raw(Model.EXAMINATION)</p>
                }
                else
                {
                    <div>--</div>
                }
                <br/>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Treatment :
            </div>
            <div class="col-sm-8 col-md-8 col-lg-8 lms-font-nomal">

                @if (Model.TREATMENT != null)
                {
                    <p>@Html.Raw(Model.TREATMENT)</p>
                }
                else
                {
                    <div>--</div>
                }
                <br/>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Additional Notes :
            </div>
            <div class="col-sm-8 col-md-8 col-lg-8 text-justify">

                @if (Model.ADDITINOALNOTES != null)
                {
                    <p>@Html.Raw(Model.ADDITINOALNOTES)</p>
                }
                else
                {
                    <div>--</div>
                }
                <br/>
                </p>
            </div>
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2">
                    Vaccum Delivery Notes :
                </div>
                <div class="col-sm-8 col-md-8 col-lg-8 text-justify">

                    @if (Model.VACCUMDELIVERYNATES != null)
                    {
                        <p>
                            @Html.Raw(Model.VACCUMDELIVERYNATES)
                        </p>
                    }
                    else
                    {
                        <div>--</div>
                    }
                    <br/>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8 col-md-8 col-lg-8 text-center" id="appendElements">
                    <a href="@Url.Action("ViewAllObstetricAdmissionSheet", "Reports" )" class="btn btn-warning" id="btnBack">
                        <i class="glyphicon glyphicon-arrow-left">
                            Back
                        </i>
                    </a>
                    <button type="button" class="btn btn-primary" id="btnPrint">
                        <i class="glyphicon glyphicon-print"></i>
                        Print
                    </button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script type="text/javascript">
            $(document).ready(function () {
                $('#btnPrint').on('click', function () {
                    var hideShowelements = [];
                    hideShowelements.push('btnBack');
                    hideShowelements.push('btnPrint');
                    PrintCanvasDiv(hideShowelements, 'canvasElement');
                });

            });</script>
    }
