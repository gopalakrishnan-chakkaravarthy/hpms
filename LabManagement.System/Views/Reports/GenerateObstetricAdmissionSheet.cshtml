@using Lab.Management.Entities;
@model lmsObstericAdmissionSheet
@using LabManagement.System.Common;
@{
    ViewBag.Title = " Obstetric Admission Sheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;
    var TemlpateContent = ViewBag.TemlpateContent as string;
}

<div class="col-sm-12 col-md-12 col-lg-12 roundCornerDiv">
    <div id="canvasElement">
        <div id="canvasPrintDiv">
            <div class="row">
                <hr />
            </div>
            <div class="row">
                <div class="col-sm-10 col-md-10 col-lg-10 text-center">
                    @Html.Partial("_HospitalDetail")
                    <p><h4 class="text-success"><i class="glyphicon glyphicon-hand-right"> </i> Admission Sheet</h4></p>
                </div>
            </div>
            <div class="row">
                <hr />
            </div>
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font">
                    Name :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">
                    @Model.NAME
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font ">
                    Age :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">
                    @if (Model.AGE != null)
                    {
                        <div>@Model.AGE</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
              
            </div>
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font">
                    Sex :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.GENDER != null)
                    {
                        if (Model.GENDER == 0)
                        {
                            <div>Male</div>
                        }
                        if (Model.GENDER == 1)
                        {
                            <div>FeMale</div>
                        }
                        if (Model.GENDER == 2)
                        {
                            <div>TransGender</div>
                        }
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font">
                    Occupation :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.OCCUPATION.stringIsNotNull())
                    {
                        <div>@Model.OCCUPATION</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
            </div>
            <div class="row">
             
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font">
                    Hosp.No :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.HOSPITALNO.stringIsNotNull())
                    {
                        <div>@Model.HOSPITALNO</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font">
                    Bed.No:
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.BEDNO.stringIsNotNull())
                    {
                        <div>@Model.BEDNO</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font">
                    Father's/Husband Name:
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.FATHERORHUSBANDNAME.stringIsNotNull())
                    {
                        <div>@Model.FATHERORHUSBANDNAME</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font">
                    Address :
                </div>
                <div class="col-sm-3 col-md-3 col-lg-3 display-auto-width text-justify hpms-print-font lms-font-nomal">

                    @if (Model.ADDRESS.stringIsNotNull())
                    {
                        <div class="text-justify">@Model.ADDRESS</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
            </div>
            <div class="row">
               
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font">
                    Obs.Code :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.OBSCODE.stringIsNotNull())
                    {
                        <div>@Model.OBSCODE</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font">
                    LMP :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.LMP.stringIsNotNull())
                    {
                        <div>@Model.LMP</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
            </div>
            <div class="row">
             
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font">
                    ObsDo Del :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.DODEL.dateTimeIsNotNull())
                    {
                        <div>@Model.DODEL.ParseIstDate()</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font">
                    EDD :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.EDD.dateTimeIsNotNull())
                    {
                        <div>@Model.EDD.ParseIstDate()</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 display-auto-width lms-font-bold hpms-print-font">
                    Phone No :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.PHONE.stringIsNotNull())
                    {
                        <div>@Model.PHONE</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 display-auto-width lms-font-bold hpms-print-font">
                    Mode of Del :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.MRDEOFDEL.stringIsNotNull())
                    {
                        <div>@Model.MRDEOFDEL</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 display-auto-width lms-font-bold hpms-print-font">
                    Date & Time of Admission :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.DATETIMEOFADMISSION.dateTimeIsNotNull())
                    {
                        <div>@Model.DATETIMEOFADMISSION.ParseIstDate()</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 display-auto-width lms-font-bold hpms-print-font">
                    Date & Time of Discharge :
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width hpms-print-font lms-font-nomal">

                    @if (Model.DATETIMEOFDISCHARGE.dateTimeIsNotNull())
                    {
                        <div>@Model.DATETIMEOFDISCHARGE.ParseIstDate()</div>
                    }
                    else
                    {
                        <div>--</div>
                    }
                </div>
            </div>
            @if (Model.PATIENTHISTORY.stringIsNotNull())
            {
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width lms-font-bold hpms-print-font">
                        Present History :
                    </div>
                    <div class="col-sm-8 col-md-8 col-lg-8 display-auto-width text-justify">

                        <p class="text-justify">@Html.Raw(Model.PATIENTHISTORY)</p>
                    </div>
                </div>
            }
            @if (Model.MENARCHE.stringIsNotNull())
            {
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width lms-font-bold hpms-print-font">
                        Menarche :
                    </div>
                    <div class="col-sm-8 col-md-8 col-lg-8 display-auto-width text-justify">

                        <p class="text-justify">@Html.Raw(Model.MENARCHE)</p>
                    </div>
                </div>
            }
            @if (Model.MENSURALHISTORY.stringIsNotNull())
            {
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width lms-font-bold hpms-print-font">
                        Mensural History :
                    </div>
                    <div class="col-sm-10 col-md-10 col-lg-10 display-auto-width">

                        <p class="text-justify">@Html.Raw(Model.MENSURALHISTORY)</p>
                    </div>
                </div>
            }
            @if (Model.MARITALHISTORY.stringIsNotNull())
            {
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width lms-font-bold  hpms-print-font">
                        Marital History :
                    </div>
                    <div class="col-sm-10 col-md-10 col-lg-10 display-auto-width ">

                        <p class="text-justify">@Html.Raw(Model.MARITALHISTORY)</p>
                    </div>
                </div>
            }
            @if (Model.FAMILYHISTORY.stringIsNotNull())
            {
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width lms-font-bold  hpms-print-font">
                        Family History :
                    </div>
                    <div class="col-sm-10 col-md-10 col-lg-10 display-auto-width ">

                        <p class="text-justify">@Html.Raw(Model.FAMILYHISTORY)</p>
                    </div>
                </div>
            }
            @if (Model.PASTHISTORY.stringIsNotNull())
            {
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width lms-font-bold hpms-print-font">
                        Past History :
                    </div>
                    <div class="col-sm-10 col-md-10 col-lg-10 display-auto-width">

                        <p class="text-justify">@Html.Raw(Model.PASTHISTORY)</p>
                    </div>
                </div>
            }
            @if (Model.EXAMINATION.stringIsNotNull())
            {
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width lms-font-bold hpms-print-font">
                        Examination :
                    </div>
                    <div class="col-sm-10 col-md-10 col-lg-10 display-auto-width ">

                        <p class="text-justify">@Html.Raw(Model.EXAMINATION)</p>
                    </div>
                </div>
            }
            @if (Model.TREATMENT.stringIsNotNull())
            {
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-2 display-auto-width lms-font-bold hpms-print-font">
                        Treatment :
                    </div>
                    <div class="col-sm-10 col-md-10 col-lg-10 display-auto-width">

                        <p class="text-justify">@Html.Raw(Model.TREATMENT)</p>
                    </div>
                </div>
            }
            <hr />
            <div class="row">
                <div class="col-sm-8 col-md-8 col-lg-8 text-center" id="appendElements">
                    <a href="@Url.Action("ViewAllObstetricAdmissionSheet", "Reports" )" class="btn btn-warning" id="btnBack">
                        <i class="glyphicon glyphicon-arrow-left">
                            Back
                        </i>
                    </a>
                    <button type="button" class="btn btn-primary" id="btnPrint">
                        <i class="glyphicon glyphicon-print"></i>
                        Print
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnPrint').on('click', function () {
                var hideShowelements = [];
                hideShowelements.push('btnBack');
                hideShowelements.push('btnPrint');
                PrintCanvasDiv(hideShowelements, 'canvasElement');
            });

        });</script>
}
