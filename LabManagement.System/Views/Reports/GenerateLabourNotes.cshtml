@using Lab.Management.Entities;
@using LabManagement.System.Common;
@model lmsLabourNote
@{
    ViewBag.Title = "Labour Notes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;
    var TemlpateContent = ViewBag.TemlpateContent as string;
}

<div class="col-sm-10 col-md-10 col-lg-10 roundCornerDiv">
    <div id="canvasElement">

        <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10 text-center">
                @Html.Partial("_HospitalDetail")
                <p><h4 class="text-success"><i class="glyphicon glyphicon-hand-right"> </i> Labour Notes</h4></p>
            </div>
        </div>
        <div class="row">
            <hr/>
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Name :
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2 lms-font-nomal">
                @Model.Name
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2">
                Age :
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2 lms-font-nomal">
                @if (Model.AGE != null)
                {
                    <div>@Model.AGE</div>
                }
                else
                {
                    <div>--</div>
                }
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2">
                I.P.NO :
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2 lms-font-nomal">
                @if (Model.IPNO.stringIsNotNull())
                {
                    <div>@Model.IPNO</div>
                }
                else
                {
                    <div>--</div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Mode of Delivery :
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 lms-font-nomal">

                @if (Model.MODEOFDELIVERY.stringIsNotNull())
                {
                    <div>@Model.MODEOFDELIVERY</div>
                }
                else
                {
                    <div>--</div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Labour Notes :
            </div>
            <div class="col-sm-8 col-md-8 col-lg-8 text-justify">

                @if (Model.LABOURNOTES.stringIsNotNull())
                {
                    <p>
                        @Html.Raw(Model.LABOURNOTES)
                    </p>
                }
                else
                {
                    <div>--</div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2">
                Treatment :
            </div>
            <div class="col-sm-8 col-md-8 col-lg-8 text-justify">

                @if (Model.TREATMENT.stringIsNotNull())
                {
                    <p>
                        @Html.Raw(Model.TREATMENT)
                    </p>
                }
                else
                {
                    <div>--</div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8 text-center" id="appendElements">
                <a href="@Url.Action("ViewAllLabourNotes", "Reports")" class="btn btn-warning" id="btnBack">
                    <i class="glyphicon glyphicon-arrow-left">
                        Back
                    </i>
                </a>
                <button type="button" class="btn btn-primary" id="btnPrint">
                    <i class="glyphicon glyphicon-print"></i>
                    Print
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnPrint').on('click', function () {
                var hideShowelements = [];
                hideShowelements.push('btnBack');
                hideShowelements.push('btnPrint');
                PrintCanvasDiv(hideShowelements, 'canvasElement');
            });

        });</script>
}
