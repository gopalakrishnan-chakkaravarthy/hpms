@using Lab.Management.Entities;
@model IList<lmsCityMaster>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewBag.Message as string;
}
<div class="roundCornerDiv">

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="alert alert-info">
                    @message
                </div>
            </div>
        </div>
    }
    @if (Model.Count() <= 0)
    {
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="alert alert-danger">
                    No Data Found
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
            <a href="@Url.Action("ViewCity", new { cityId =0})" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>New
            </a>
        </div>
    </div>
    <hr />
    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col-sm-8 col-lg-8 col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="glyphicon glyphicon-th-large"></i> Available Cities
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">

                            @{
                                <table id="allDetails" class=" table table-striped table-bordered dataTable no-footer">
                                    <thead>
                                        <tr>
                                            <td>City Name</td>
                                            <td>Edit</td>
                                            <td>Delete</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var obj in Model)
                                        {
                                            <tr>
                                                <td>@obj.CITYNAME</td>
                                                <td>
                                                    <a href="@Url.Action("ViewCity", new { cityId = @obj.CITYID })" class="btn btn-success">
                                                        <i class="glyphicon glyphicon-pencil"></i>
                                                        Edit

                                                    </a>


                                                </td>
                                                <td>
                                                    <a href="@Url.Action("DeleteCity", new { cityId = @obj.CITYID })" class="btn btn-danger">
                                                        <i class="glyphicon glyphicon-trash"></i>
                                                        Delete

                                                    </a>


                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>

    }
</div>
@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $('#allDetails').DataTable();
        });

    </script>
}


