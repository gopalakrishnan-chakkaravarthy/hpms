@using Lab.Management.Engine.Utils;
@model List<DownLoadFileInformation>
@{
    ViewBag.Title = "File Download";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var downloadFor = ViewBag.DownloadFor as string;
}
<div class="roundCornerDiv">

    @if (Model.Count() <= 0)
    {
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="alert alert-danger">
                    No Files Found
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-sm-8 col-lg-8 col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="glyphicon glyphicon-th-large"></i>File Download
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="allDetails" class=" dataTable table table-striped table-bordered dataTable no-footer">
                                <thead>
                                    <tr>
                                        <td>
                                            File Name
                                        </td>
                                        <td> Download</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var file in Model)
                                    {
                                        <tr>
                                            <td>
                                                @file.FileName
                                            </td>
                                            <td> <a href="@Url.Action("Download", new { FileID = @file.FileId, downloadfor = @downloadFor })">Download</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
        </div>

    }
</div>
@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $('#allDetails').DataTable();
        });

    </script>
}
